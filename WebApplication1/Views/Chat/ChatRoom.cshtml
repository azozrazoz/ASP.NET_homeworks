@model WebApplication1.Models.ChatModel

<div id="RefreshArea">
    @{
        Html.RenderPartial("History", Model);
    }
</div>

@Ajax.ActionLink("ActionLink", "Index", new { user = "", logOn = "", logOff = "", chatMessage = "" },
    new AjaxOptions { UpdateTargetId = "RefreshArea", OnFailure = "ChatOnFailure", OnSuccess = "ChatOnSuccess" },
    new { @id = "ActionLink", @style = "visibility:hidden;" })

<div id="inputForm">
    <table>
        <tr>
            <td rowspan="4"><textarea id="txtMessage" rows="5"></textarea></td>
            <td> <button id="btnMessage" value="Send">Send</button></td>
        </tr>
        <tr>
            <td><button id="btnLogOff" value="Exit">Exit</button></td>
        </tr>
    </table>
</div>